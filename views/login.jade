extends /layouts/main
block title
  title Login
block content
  div(class='container')
    div(class='card')
      form(action='/login' method='POST')
        div(class='card-content')
          span(class='card-title') Login
          div(class='row')
            div(class='input-field col s12')
              input(type='text' name='username' id='username' required='' class='validate')
              label(for='username') Username
          div(class='row')
            div(class='input-field col s12')
              input(type='password' name='password' id='password' required='' class='validate')
              label(for='password') Password
          unless error = ''
            ul(class='collection')
              each val in error
                li(class='collection-item red-text')= val
        div(class='card-action')
          button(class='btn' type='submit') Login
